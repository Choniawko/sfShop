{% extends "::base.html.twig" %}

{% block title %}{{ parent() }} | Koszyk{% endblock %}

{% block body %}
<h1>Koszyk</h1>
{% if basket.products %}

        <a href="{{ path('basket_clear') }}" title="Wyczyść koszyk" class="btn btn-danger">Wyczyść</a>
        <a href="{{ path('products_list') }}" class="btn btn-warning">Kupuj dalej</a>
{% endif %}



<table class="table table-striped">
        <thead>
            <tr>
                <th>id</th>
                <th>nazwa</th>
                <th>cena</th>
                <th>ilość</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
        {% for product in basket.products %}
        <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.quantity }}</td>
                <td><a href="{{ path('basket_remove', { 'id': product.id }) }}" class="btn btn-danger">usuń</a></td>
  
        </tr>
        
        {% else %}
            <tr>
                <td><h2>Koszyk jest pusty!<h2></td>
            </tr>
        {% endfor %}

        </tbody>
</table>
<a href="" class="btn btn-primary">Złóż zamówienie</a>
{% endblock %}
