{% extends "::base.html.twig" %}

{% block title %}Koszyk{% endblock %}

{% block body %}
<h1>Koszyk</h1>

<a href="{{ path('products_list') }}" class="btn btn-warning">Kupuj dalej</a>

<table class="table table-striped">
        <thead>
            <tr>
                <th>id</th>
                <th>nazwa</th>
                <th>cena</th>
                <th>opis</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products_in_basket %}
        <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.desc }}</td>
                <td><a href="{{ path('basket_remove', { 'id': product.id }) }}" class="btn btn-danger">usu≈Ñ</a></td>
            
        </tr>
        {% else %}
            <tr>
                <td><h2>Koszyk jest pusty!<h2></td>
            </tr>
        {% endfor %}
        </tbody>
</table>
<a href="" class="btn btn-primary">Do kasy</a>
{% endblock %}
